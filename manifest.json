{
    "manifest_version": 3,
    "name": "Yappin Entertainment",
    "version": "0.1.0",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["*://*.netflix.com/*"],
    "content_scripts": [
        {
            "matches": ["*://*.netflix.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]

}